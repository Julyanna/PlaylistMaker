<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/padding_between_buttons</item>
        <item name="android:layout_marginBottom">@dimen/padding_between_buttons</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_between_elements</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="MaterialTextViewStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">@dimen/vertical_menu_padding</item>
        <item name="android:paddingVertical">@dimen/vertical_menu_padding</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="DrawableArrowBackStyle" >
        <item name="android:fillColor">@color/black</item>
    </style>
    <style name="ToolbarStyle" >
        <item name="android:titleTextColor">?attr/colorOnSecondary</item>
    </style>
    <style name="DrawableViewStyle" >
        <item name="android:fillColor">@color/white</item>
    </style>
    <style name="SwitchThemeStyle" >
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MainLayoutStyle" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/black</item>
    </style>
</resources>
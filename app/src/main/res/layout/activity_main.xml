<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="14dp"
        android:layout_marginBottom="40dp"
        android:textSize="@dimen/text_size"
        android:title="@string/app_name"
        android:titleMargin="0dp"
        android:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
        android:titleTextColor="@color/white" />

    <Button
        android:id="@+id/imageButtonSearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="@dimen/padding_between_buttons"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:letterSpacing="0"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:onClick="onClick"
        android:padding="0dp"
        android:text="@string/search"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_search"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/padding_between_elements"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/imageButtonLibrary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="@dimen/padding_between_buttons"
        android:layout_marginBottom="@dimen/padding_between_buttons"
        android:backgroundTint="@color/white"
        android:letterSpacing="0"
        android:onClick="onClick"
        android:text="@string/library"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:textAllCaps="false"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_library"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/padding_between_elements"
        app:iconTint="@color/black" />

    <Button
        android:id="@+id/imageButtonSettings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="@dimen/padding_between_buttons"
        android:layout_marginBottom="28dp"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        android:letterSpacing="0"
        android:onClick="onClick"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_settings"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/padding_between_elements"
        app:iconTint="@color/black" />

</LinearLayout>